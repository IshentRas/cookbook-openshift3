BuildDefaults:
  configuration:
    apiVersion: v1
    kind: BuildDefaultsConfig
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_git_http_proxy'].empty? -%>
    gitHTTPProxy: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_git_http_proxy'] %>"
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_git_https_proxy'].empty? -%>
    gitHTTPSProxy: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_git_https_proxy'] %>"
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_git_no_proxy'].empty? -%>
    gitNoProxy: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_git_no_proxy'] %>"
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_env'].empty? -%>
    env:
<% node['is_apaas_openshift_cookbook']['openshift_builddefaults_env'].each do |env| %>
<% env.each_pair do |k,v| %>
    - name: <%= k.upcase %>
      value: <%= v %>
<%- end -%>
<%- end -%>
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_image_labels'].empty? -%>
    imageLabels:
<% node['is_apaas_openshift_cookbook']['openshift_builddefaults_image_labels'].each do |image| %>
<% image.each_pair do |k,v| %>
    - name: <%= k %>
      value: <%= v %>
<%- end -%>
<%- end -%>
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_nodeselectors'].empty? -%>
    nodeSelector:
<% node['is_apaas_openshift_cookbook']['openshift_builddefaults_nodeselectors'].each_pair do |k,v| %>
      <%= k %>: <%= v %>
<%- end -%>
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_annotations'].empty? -%>
    annotations:
<% node['is_apaas_openshift_cookbook']['openshift_builddefaults_annotations'].each_pair do |k,v| %>
      <%= k %>: <%= v %>
<%- end -%>
<%- end -%>
<% if node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources'] -%>
    resources:
      requests:
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_requests_cpu'].empty? %>
        cpu: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_requests_cpu'] %>"
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_requests_memory'].empty? %>
        memory: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_requests_memory'] %>"
<%- end -%>
      limits:
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_limits_cpu'].empty? %>
        cpu: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_limits_cpu'] %>"
<%- end -%>
<% unless node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_limits_memory'].empty? %>
        memory: "<%= node['is_apaas_openshift_cookbook']['openshift_builddefaults_resources_limits_memory'] %>"
<%- end -%>
<%- end -%>
