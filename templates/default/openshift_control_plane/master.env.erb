# Proxy configuration
# Origin uses standard HTTP_PROXY environment variables. Be sure to set
# NO_PROXY for your master
<% if node['is_apaas_openshift_cookbook']['openshift_no_proxy'].empty? -%>
#NO_PROXY=master.example.com
<% else -%>
NO_PROXY=<%= [
  node['is_apaas_openshift_cookbook']['openshift_no_proxy'].split(','),
  node['is_apaas_openshift_cookbook']['openshift_common_api_hostname'],
  node['is_apaas_openshift_cookbook']['master_servers'].map { |server| server['fqdn'] },
  node['is_apaas_openshift_cookbook']['node_servers'].map { |server| server['fqdn'] },
  ".#{node['is_apaas_openshift_cookbook']['osn_cluster_dns_domain']}",
  node['is_apaas_openshift_cookbook']['openshift_common_portal_net'],
  node['is_apaas_openshift_cookbook']['openshift_master_sdn_cluster_network_cidr']
].flatten.uniq.join(',') %>
<% end %>
<% if node['is_apaas_openshift_cookbook']['openshift_http_proxy'].empty? -%>
#HTTP_PROXY=http://USER:PASSWORD@IPADDR:PORT
<% else -%>
HTTP_PROXY=<%= node['is_apaas_openshift_cookbook']['openshift_http_proxy'] %>
<% end %>
<% if node['is_apaas_openshift_cookbook']['openshift_https_proxy'].empty? -%>
#HTTPS_PROXY=https://USER:PASSWORD@IPADDR:PORT
<% else -%>
HTTPS_PROXY=<%= node['is_apaas_openshift_cookbook']['openshift_https_proxy'] %>
<% end %>

DEBUG_LOGLEVEL=<%= node['is_apaas_openshift_cookbook']['openshift_master_debug_level'] %>
