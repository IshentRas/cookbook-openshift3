apiVersion: "v1"
kind: "DeploymentConfig"
metadata:
  name: "<%= @deploy_name %>"
  labels:
    provider: openshift
    component: "<%= @component %>"
    logging-infra: "<%= @logging_component %>"
spec:
  replicas: 0
  selector:
    provider: openshift
    component: "<%= @component %>"
    logging-infra: "<%= @logging_component %>"
  strategy:
    rollingParams:
      intervalSeconds: 1
      timeoutSeconds: 600
      updatePeriodSeconds: 1
    type: Recreate
  template:
    metadata:
      name: "<%= @deploy_name %>"
      labels:
        logging-infra: "<%= @logging_component %>"
        provider: openshift
        component: "<%= @component %>"
    spec:
      terminationGracePeriod: 600
      serviceAccountName: aggregated-logging-curator
<% unless node['is_apaas_openshift_cookbook']['openshift_logging_curator_nodeselector'].empty? -%>
      nodeSelector:
<% node['is_apaas_openshift_cookbook']['openshift_logging_curator_nodeselector'].each_pair do |k, v| %>
        <%= k %>: "<%= v %>"
<%- end -%>
<%- end -%>
      containers:
        -
          name: "curator"
          image: <%= @image %>
          imagePullPolicy: IfNotPresent
          resources:
            limits:
              cpu: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_cpu_limit'] %>"
<% unless node['is_apaas_openshift_cookbook']['openshift_logging_curator_memory_limit'].empty? -%>
              memory: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_memory_limit'] %>"
<% end -%>
          env:
            -
              name: "K8S_HOST_URL"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_master_url'] %>"
            -
              name: "ES_HOST"
              value: "<%= @es_host %>"
            -
              name: "ES_PORT"
              value: "<%= @es_port %>"
            -
              name: "ES_CLIENT_CERT"
              value: "/etc/curator/keys/cert"
            -
              name: "ES_CLIENT_KEY"
              value: "/etc/curator/keys/key"
            -
              name: "ES_CA"
              value: "/etc/curator/keys/ca"
            -
              name: "CURATOR_DEFAULT_DAYS"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_default_days'] %>"
            -
              name: "CURATOR_RUN_HOUR"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_run_hour'] %>"
            -
              name: "CURATOR_RUN_MINUTE"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_run_minute'] %>"
            -
              name: "CURATOR_RUN_TIMEZONE"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_run_timezone'] %>"
            -
              name: "CURATOR_SCRIPT_LOG_LEVEL"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_script_log_level'] %>"
            -
              name: "CURATOR_LOG_LEVEL"
              value: "<%= node['is_apaas_openshift_cookbook']['openshift_logging_curator_log_level'] %>"
          volumeMounts:
            - name: certs
              mountPath: /etc/curator/keys
              readOnly: true
            - name: config
              mountPath: /etc/curator/settings
              readOnly: true
      volumes:
        - name: certs
          secret:
            secretName: logging-curator
        - name: config
          configMap:
            name: logging-curator

