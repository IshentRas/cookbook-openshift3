oauthConfig:
<% if node['is_apaas_openshift_cookbook']['openshift_master_asset_config'] %>
  <% if node['is_apaas_openshift_cookbook']['openshift_master_asset_config'].has_key?('templates') %>
  templates:
    login: <%= node['is_apaas_openshift_cookbook']['openshift_master_asset_config']['templates']%>
  <% end %>
<% end %>
  assetPublicURL: <%= node['is_apaas_openshift_cookbook']['openshift_master_console_url'] %>/
  grantConfig:
    method: <%= node['is_apaas_openshift_cookbook']['openshift_master_oauth_grant_method'] %>
  identityProviders:
<% node['is_apaas_openshift_cookbook']['oauth_Identities'].each do |identityProvider| %>
  - name: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['name']%>
    challenge: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['challenge']%>
    login: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['login']%>
    provider:
      apiVersion: v1
      kind: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] %>
  <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'HTPasswdPasswordIdentityProvider' -%>
      file: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['filename'] %>
  <% elsif node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'BasicAuthPasswordIdentityProvider' -%>
      url: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['url'] %>
    <% ['ca' , 'certFile' , 'keyFile'].each do |key| %>
      <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider].has_key?(key) %>
      <%= key %>: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider][key] %>
      <% end %>
    <% end %>
  <% elsif node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'RequestHeaderIdentityProvider' -%>
      headers:
    <% node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['headers'].each do |header| -%>
      - <%= header %>
    <% end %>
    <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider].has_key?('clientCA')%>
      clientCA: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientCA'] %>
    <% end %>
  <% elsif node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'GitHubIdentityProvider' -%>
      clientID: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientID'] %>
      clientSecret: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientSecret'] %>
    <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider].has_key?('organizations') %>
      organizations:
      <% node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['organizations'].each do |organization| %>
      - <%= organization %>
      <% end %>
    <% end %>
  <% elsif node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'GoogleIdentityProvider' -%>
      clientID: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientID'] %>
      clientSecret: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientSecret'] %>
    <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider].has_key?('hostedDomain') %>
      hostedDomain: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['hostedDomain'] %>
    <% end %>
  <% elsif node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'OpenIDIdentityProvider' -%>
      clientID: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientID'] %>
      clientSecret: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['clientSecret'] %>
      claims:
        id: 
        - <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['claims']['id'] %>
    <% ['preferredUsername', 'name', 'email'].each do |claim_key| %>
      <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['claims'].has_key?(claim_key) %>
        <%= claim_key %>: 
        - <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['claims'][claim_key] %>
      <% end %>
    <% end %>
      urls:
        authorize: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['urls']['authorize'] %>
        token: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['urls']['token'] %>
    <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['urls'].has_key?('userInfo') %>
        userInfo: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['urls']['userInfo'] %>
    <% end %>
    <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider].has_key?('extraScopes') %>
      extraScopes:
      <% node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['extraScopes'].each do |scope| %>
      - <%= scope %>
      <% end %>
    <% end %>
    <% if node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider].has_key?('extraAuthorizeParameters') %>
      extraAuthorizeParameters:
      <% node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['extraAuthorizeParameters'].each_pair do |param_key , param_value| %>
        <%= param_key %>: <%= param_value %>
      <% end %>
    <% end %>
  <% elsif node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['kind'] == 'LDAPPasswordIdentityProvider' -%>
      attributes:
        id:
        - <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_preferred_username'] %>
        email:
        - mail
        name:
        - cn
        preferredUsername:
        - <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_preferred_username'] %>
      bindDN: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_bind_dn'] %>
      bindPassword: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_bind_password'] %>
      insecure: <%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_insecure'] %>
      url: "<%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_insecure'] ? 'ldap' : 'ldaps' %>://<%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_server'] %>/<%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_base_ou'] %>?<%= node['is_apaas_openshift_cookbook']['openshift_master_identity_provider'][identityProvider]['ldap_preferred_username'] %>?sub?<%= node['is_apaas_openshift_cookbook']['openshift_master_identity_ldap_filter'] %>"
  <% end -%>
<% end -%>
  masterCA: ca-bundle.crt
  masterPublicURL: <%= node['is_apaas_openshift_cookbook']['openshift_master_public_api_url'] %>
  masterURL: <%= node['is_apaas_openshift_cookbook']['openshift_master_api_url'] %>
  sessionConfig:
    sessionMaxAgeSeconds: <%= node['is_apaas_openshift_cookbook']['openshift_master_session_max_seconds'] %>
    sessionName: <%= node['is_apaas_openshift_cookbook']['openshift_master_session_name'] %>
    sessionSecretsFile: <%= node['is_apaas_openshift_cookbook']['openshift_master_session_secrets_file'] %>
  tokenConfig:
    accessTokenMaxAgeSeconds: <%= node['is_apaas_openshift_cookbook']['openshift_master_access_token_max_seconds'] %>
    authorizeTokenMaxAgeSeconds: <%= node['is_apaas_openshift_cookbook']['openshift_master_auth_token_max_seconds'] %>
